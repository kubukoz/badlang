{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Badlang",
  "patterns": [
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#nulls"
    },
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "strings": {
      "name": "string.quoted.double.badlang",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.badlang",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "name": "comment.line.double-slash",
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "match": "\\/\\/.*"
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric",
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "[^\\w]\\d+(\\.\\d+)?"
        }
      ]
    },
    "keywords": {
      "name": "keyword",
      "patterns": [{ "name": "keyword", "match": "\\b(LET|INC|SHOW|EXIT)\\b" }]
    }
  },
  "scopeName": "source.badlang"
}
